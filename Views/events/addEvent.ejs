<html>
<head>
  <%- include("../partial/bootstrap.ejs") -%>
  <title>Add Event</title>

  <link rel="stylesheet" href="/js/jquery-ui-1.12.1.custom/jquery-ui.css"/>
  
  <script src="/js/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
  <script>
$( function() {
  $( "#datepicker" ).datepicker();
} );
</script>

</head>
<body>
 
  <div class="container">
      <br/>
    <%- include("../partial/nav.ejs") -%>
    <br/>

    <div class="container card ">
            
        <form method="POST" action="/event/add">
          <br/> 
          
          <div class="form-group row">
              
            <label class="col-sm-2 col-form-label">Title Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="title" placeholder="Title">
            </div>
          </div>
          <div class="form-group row">
              
              <label class="col-sm-2 col-form-label">Main Speaker</label>
              <div class="col-sm-10">
                <select class="form-control" name="mainSpeaker">
                    
                    <%speakers.forEach((speaker)=>{%>
                        <option value="<%=speaker._id%>">
                            <%=speaker.FullName%>
                        </option>
                    <%})%>
                    
                  </select>
              </div>
            </div>
           
               <div class="form-group row">
             
                <label class="col-sm-2 col-form-label">Other Speakers</label>
                <div class="col-sm-10">
                    <select class="custom-select" multiple name="otherSpeakers">
                       
                        <%speakers.forEach((speaker)=>{%>
                            <option value="<%=speaker._id%>">
                                <%=speaker.FullName%>
                            </option>
                        <%})%>
            
                      </select>
                </div>
              </div>
              <div class="form-group row">
              
                <label class="col-sm-2 col-form-label">Date</label>
                <div class="col-sm-10">
                   <input type="text"  class="form-control" id="datepicker" name="eventDate">

                </div>
              </div>


              
            <div class="form-group row text-center">
              <div class="col-sm-10">
                <button type="submit" class=" btn btn-primary ">Save</button>
              </div>
            </div>
          </form>
        </div>


   
</div>
</body>

</html>